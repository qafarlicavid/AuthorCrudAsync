@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using DemoApplication.Areas.Admin.ViewModels.Author
@model List<ListItemViewModel>

<form method="POST" class="row mx-3 my-3">
    <div class="col-lg-12">
        <label for="recipient-name" class="col-form-label">FirstName:</label>
        <input type="text" class="form-control" id="txtFirstName">
    </div>

    <div class="col-lg-12 mt--30 mt-lg--30">
        <label for="recipient-name" class="col-form-label">LastName:</label>
        <input type="text" class="form-control" id="txtLastName">
    </div>
    <div class="col-lg-12 mt-2">
        <button class="btn btn-success modal-submit-button">Submit</button>
        <a id="authorhref" asp-route="admin-author-add"></a>
    </div>
</form>


